<body>
    <header>
        <h1>Espot Solutions</h1>
        <p>Your Gateway to Business Excellence</p>
        <p>Contact: +923204342479</p>
    </header>
    <h2>Number Range Generator</h2>
    <label for="startNumber">Enter the first number:</label>
    <input type="number" id="startNumber">
    <br>
    <label for="endNumber">Enter the last number:</label>
    <input type="number" id="endNumber">
    <br>
    <button onclick="generateNumbers()">Generate Numbers</button>
    <button id="copyButton" onclick="copyNumbers()">Copy Numbers</button>

    <script>
        let generatedNumbers = '';

        function generateNumbers() {
            const startNumber = parseInt(document.getElementById('startNumber').value);
            const endNumber = parseInt(document.getElementById('endNumber').value);

            generatedNumbers = '';

            if (isNaN(startNumber) || isNaN(endNumber)) {
                alert('Please enter valid numbers.');
                document.getElementById('copyButton').style.display = 'none';
                return;
            }

            if (startNumber > endNumber) {
                alert('The first number must be less than or equal to the last number.');
                document.getElementById('copyButton').style.display = 'none';
                return;
            }

            for (let i = startNumber; i <= endNumber; i++) {
                generatedNumbers += i + '\n';
            }

            document.getElementById('copyButton').style.display = 'inline-block';
        }

        function copyNumbers() {
            if (generatedNumbers) {
                navigator.clipboard.writeText(generatedNumbers).then(function() {
                    alert('Numbers copied to dashboard!');
                }, function(err) {
                    console.error('Could not copy text: ', err);
                });
            } else {
                alert('No numbers to copy. Please generate the numbers first.');
            }
        }
    </script>
